<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnJson1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtn1Clicked"
        android:text="Json1" />

    <Button
        android:id="@+id/btnJson2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtn2Clicked"
        android:text="Json2" />

    <Button
        android:id="@+id/btnJson3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtn3Clicked"
        android:text="Json3" />

    <Button
        android:id="@+id/btnXml1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtn4Clicked"
        android:text="Xml1" />
</LinearLayout>